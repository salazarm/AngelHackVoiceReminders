<script>
	window.user = <%= raw current_user.to_json %>;
	user['reminders'] = <%= raw current_user.given_reminders.to_json %>.concat(<%= raw current_user.reminders.to_json %>).sort(function(a,b){
		return a['playtime'] - b['playtime'];
	});
	user['reminders'] = _.filter(user['reminders'], function(reminder) {
		return reminder.playtime != null;
	});

</script>

	<div class = "leftpanel">
		<%= link_to "Edit",   edit_user_registration_path %>
	</div>
	<script type="text/javascript">
		function change() {
			d = document.getElementById("choice_id").value;
			if (d ==1){
				$('.record-panel.clearfix').slideToggle(600);
			}
			if (d ==2){
				$('#voice').slideToggle(600);
			}
		}
	</script>

	<div class="rightpanel">
		<h3 onclick = "$('.newrecord').slideToggle(600); mouse:cursor" style = "text-align:center;"> Create a new reminder:</h3>
		<div class = "newrecord">
			<%= form_for @reminder, :id=>"reminder_form", :action => :create do |f| %>

			<%= f.select :_type,  options_for_select([['Select', 0],['Record your own', 1], ['Pick a voice', 2]]), {},{:onchange => "change()", :id => "choice_id"} %>

			<div class="record-panel clearfix" id = "recordpanel" style="display:none; position: relative; text-align:center">
					<div class="pull-left" style="width: 100px; margin-left:150px; padding: 0px 3px 3px 0px">
						<canvas id="analyser" width="60" height="20"></canvas>
						<canvas id="wavedisplay" width="60" height="20"></canvas>
					</div>
					<div class = "record" id="record" style="width: 50px;cursor:pointer;" onclick="toggleRecording(this)" class="pull-left">Record</div>
					<div class ="save" style="width: 50px;" class="pull-left" onclick="saveAudio();">Save</div>
				</div>
				<div id = "voice" style = "display:none">
					<div><%= f.select :gender, options_for_select([['Female', 1], ['male', 2]]) %></div>
					<div><%= f.text_area :message, :placeholder => "Enter Message", :size => "20x2" %></div>
				</div>
			  <div><%= f.text_field :playtime, :placeholder => "Select time and date", :id => "playtime" %></div>
			   <div><%= f.text_field :number, :placeholder => "Enter Number" %></div>
			  
			  <%= f.submit "Create", :id=>"create_reminder" %>
			<% end %>
		</div>




		<div id="feed">
		</div>

		<script type="text/javascript">
		$('#recordoption').on('change', function() {
		    var val = $(this).val();
		    $('#voice').hide();
		    $('#PayPal').hide();
		    $('#' + val).show();
		});
		$('#recordoption').change(function(){
		     var selection = $(this).val();
		     alert(selection);
		    switch(selection){
		    case "voice":
		    	$("#recordpanel").show();
		    case "pick":
		    	$('#pickvoice').show()
		   break;
		    default:
		    $("#otherType").hide()
		    }
		});
		</script>



</div>

<script type="text/template" id="feed-item-template">
	<div class="feed-item clearfix">
		<div class="feed-icon pull-left">
		</div>
		<div style="width:10px; height: 40px; float:left"></div>
		<div class="feed-content">
			[[ if  (window.user.id == callee.id && (Date.parse(playtime)- (new Date()) > 0 ) ){ ]]

				<b>
				[[ if (caller && caller.id) { ]]<a href="/users/"+[[=caller.id]]>
					[[= caller.first_name ]]
				</a>
				[[ } else { ]]
					[[= number ]]
				[[ } ]]
				</b> has set up a reminder for you for <b>[[= pretty_date(playtime) ]]</b>

			[[ } else if (caller && window.user.id == caller.id && (Date.parse(playtime)- (new Date()) > 0)) { ]]
				<b>You</b> have set up a reminder for <b>
				[[ if (callee && callee.name) { ]]<a href="/users/"+[[= callee.id ]]>
					[[= callee.name ]]
			</a>[[ } else { ]][[= number ]][[ } ]]</b> for <b>[[= pretty_date(playtime) ]]

			[[ } else { ]]
				<b>Your</b> reminder for <b>

				[[ if (callee && callee.name) { ]]<a href="/users/"+[[= callee.id ]]>
					[[= callee.name ]]
			</a>[[ } else { ]][[= number ]][[ } ]]</b> went off [[= pretty_date(playtime) ]]
			[[ } ]]
		</div>
		<img class="pull-right" width="30px" height="30px" style="margin: -10px 20px 0px 0px;" src="http://vector.me/files/images/1/7/178682/green_checkmark_clip_art_preview.jpg"></img>
	</div>
</script>

<script type="text/javascript">
	$(function(){
        $("#playtime").datetimepicker({timeFormat: " hh:mm:ss"});
        _.each(user.reminders, function(reminder) {
        	$("#feed").append(FeedItemView(reminder));
        });
        $("#create_reminder").bind("click", function(e){
        	$("#playtime").val(new Date(Date.parse($("#playtime").val())));
        });
    });
	
</script>

